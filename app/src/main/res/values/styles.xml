<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>

        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/MyDialog.DialogContent</item>
        <item name="android:fontFamily">@font/alice</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialog.RaisedButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialog.NegativeButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyDialog.RaisedButton</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="MyDialog.DialogContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/alice</item>
    </style>

    <style name="MyDialog.RaisedButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/alice</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="MyDialog.NegativeButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/alice</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

</resources>
