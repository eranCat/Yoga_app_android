<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.newEditData.NewEditDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:divider="@drawable/empty_tall_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/archivo_narrow"
            android:hint="title"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/event_img_view"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_placeholder"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/select_loc_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/archivo_narrow"
            android:gravity="center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="16dp"
            android:text="Select Location"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/archivo_narrow"
            android:gravity="center_vertical"
            android:text="no location selected"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/start_date_btn"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/archivo_narrow"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="Select start date"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/archivo_narrow"
            android:gravity="center_vertical"
            android:text="Date"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/end_date_btn"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/archivo_narrow"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="Select end date"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/archivo_narrow"
            android:gravity="center_vertical"
            android:text="Date"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="Select the max amount of people"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <NumberPicker
                android:id="@+id/max_ppl_picker"
                style="@android:style/Widget.Material.Light.NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="horizontal" />

        </LinearLayout>

        <com.erank.yogappl.ui.custom_views.DataLevelSpinner
            android:id="@+id/level_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/cost_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/archivo_narrow"
            android:hint="cost"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/equip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/archivo_narrow"
            android:hint="equipment"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/extra_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/archivo_narrow"
            android:hint="extra notes"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
